---
import Layout from '../layouts/Layout.astro'
---

<Layout title="Harga">
  <section class="py-20 px-4">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold mb-4">Harga Sederhana</h1>
        <p class="text-xl text-gray-600">
          Pilih paket yang sesuai dengan kebutuhan tim Anda
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
        <!-- Starter -->
        <div class="bg-white border rounded-xl p-8">
          <h3 class="text-lg font-semibold mb-2">Starter</h3>
          <p class="text-gray-600 mb-4">Untuk tim kecil</p>
          <div class="mb-6">
            <span class="text-4xl font-bold">Rp 299rb</span>
            <span class="text-gray-600">/bulan</span>
          </div>
          <ul class="space-y-3 mb-8">
            <li class="flex items-center gap-2">
              <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              Hingga 5 pengguna
            </li>
            <li class="flex items-center gap-2">
              <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              100 pelanggan
            </li>
            <li class="flex items-center gap-2">
              <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              GPS tracking
            </li>
          </ul>
          <a
            href="/demo"
            class="block text-center px-6 py-3 border border-primary-600 text-primary-600 rounded-lg hover:bg-primary-50 transition-colors"
          >
            Mulai Trial
          </a>
        </div>

        <!-- Pro -->
        <div class="bg-primary-600 text-white rounded-xl p-8 relative">
          <div class="absolute -top-3 left-1/2 -translate-x-1/2 bg-yellow-400 text-yellow-900 text-sm font-semibold px-3 py-1 rounded-full">
            Populer
          </div>
          <h3 class="text-lg font-semibold mb-2">Pro</h3>
          <p class="text-primary-100 mb-4">Untuk tim berkembang</p>
          <div class="mb-6">
            <span class="text-4xl font-bold">Rp 799rb</span>
            <span class="text-primary-200">/bulan</span>
          </div>
          <ul class="space-y-3 mb-8">
            <li class="flex items-center gap-2">
              <svg class="w-5 h-5 text-primary-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              Hingga 15 pengguna
            </li>
            <li class="flex items-center gap-2">
              <svg class="w-5 h-5 text-primary-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              500 pelanggan
            </li>
            <li class="flex items-center gap-2">
              <svg class="w-5 h-5 text-primary-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              Geofence validation
            </li>
            <li class="flex items-center gap-2">
              <svg class="w-5 h-5 text-primary-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              Export Excel
            </li>
          </ul>
          <a
            href="/demo"
            class="block text-center px-6 py-3 bg-white text-primary-600 rounded-lg hover:bg-gray-100 transition-colors font-medium"
          >
            Mulai Trial
          </a>
        </div>

        <!-- Enterprise -->
        <div class="bg-white border rounded-xl p-8">
          <h3 class="text-lg font-semibold mb-2">Enterprise</h3>
          <p class="text-gray-600 mb-4">Untuk skala besar</p>
          <div class="mb-6">
            <span class="text-4xl font-bold">Custom</span>
          </div>
          <ul class="space-y-3 mb-8">
            <li class="flex items-center gap-2">
              <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              Unlimited pengguna
            </li>
            <li class="flex items-center gap-2">
              <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              Unlimited pelanggan
            </li>
            <li class="flex items-center gap-2">
              <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              API integration
            </li>
            <li class="flex items-center gap-2">
              <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              Dedicated support
            </li>
          </ul>
          <a
            href="/demo"
            class="block text-center px-6 py-3 border border-primary-600 text-primary-600 rounded-lg hover:bg-primary-50 transition-colors"
          >
            Hubungi Kami
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>
